{% extends 'ThemeBundle:Default:layout_base.html.twig' %}
{% set title = 'Alta Departamento' %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content_title %}
    Formulario de Alta
{% endblock %}
{% block content -%}
    <form class="" role="form" action="{{ path('departamento_create') }}" role="form" method="post">

        <div class="row">
            <div class="col-xs-12">            
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Departamento</h3>
                    </div>
                    <div class="box-body">
                        {{ form_widget(form) }}
                    </div>
                    <div class="box-footer">
                        <div class="pull-right">
                            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Guardar
                            </button>

                            <a class="btn btn-default" href="{{ path('departamento') }}">
                                Volver
                            </a>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </form>


{% endblock %}
