{% extends 'ThemeBundle:Default:layout_base.html.twig' %}
{% set title = 'Alta Localidad' %}
{% block title %}
    {{ title }}
{% endblock %}
{% block content_title %}
    Formulario de Alta
{% endblock %}
{% block content -%}

    <div class="row">
        <div class="col-xs-12 col-sm-12">            
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Localidad</h3>
                </div>
                <form class="form-horizontal" role="form" action="{{ path('localidad_create') }}" role="form" method="post">
                    <div class="box-body">
                        {{ form_widget(form) }}
                    </div>
                    <div class="box-footer">
                        <div class="pull-right">
                            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Guardar
                            </button>

                            <a class="btn btn-default" href="{{ path('pais') }}">
                                Volver
                            </a>

                        </div>
                    </div>
                </form>


            </div>
        </div>
    </div>


{% endblock %}
